{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["esnext", "dom"],
    "module": "ES2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext"
  },
  "exclude": ["node_modules", "dist"],
  "include": [
    "src",
    "jest.config.ts",
    "postcss.config.js",
    "tailwind.config.js",
    ".eslintrc.js",
    ".lintstagedrc.js",
    ".prettierrc.js",
    "vite.config.ts"
  ]
}
